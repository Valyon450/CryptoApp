<UserControl
    x:Class="UI.CommonControls.ComboBoxes.RefreshRateComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ComboBox x:Name="RefreshRateComboBoxControl"
              SelectedIndex="1"
              SelectionChanged="RefreshRateComboBox_SelectionChanged">
        <ComboBoxItem Content="1 second" Tag="1"/>
        <ComboBoxItem Content="5 seconds" Tag="5"/>
        <ComboBoxItem Content="10 seconds" Tag="10"/>
        <ComboBoxItem Content="30 seconds" Tag="30"/>
        <ComboBoxItem Content="1 minute" Tag="60"/>
    </ComboBox>
    
    
</UserControl>
